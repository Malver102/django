server {
    listen 80;
    server_name 0.0.0.0;  # Zmodyfikuj na swoją domenę

    location = /favicon.ico { access_log off; log_not_found off; }

    location / {
        include         uwsgi_params;
        uwsgi_pass      unix:/etc/uwsgi-emperor/emperor.sock;
        uwsgi_param     UWSGI_CHDIR /etc/uwsgi-emperor;
        uwsgi_param     UWSGI_SCRIPT emperor.ini;
    }

    location /static/ {
        alias /django/static/;
    }

    location /media/ {
        alias /django/media/;
    }

    error_page 404 /404.html;
    location = /404.html {
        root /django/;
    }