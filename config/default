
server {
    listen 80;
    server_name 0.0.0.0;

    location /app1/ {
        include         uwsgi_params;
        uwsgi_pass      unix:/django/django_app/app1/app1.sock;
        uwsgi_param     UWSGI_CHDIR /django/django_app/app1;
        uwsgi_param     UWSGI_SCRIPT app1.wsgi:application;
    }

    location /app2/ {
        include         uwsgi_params;
        uwsgi_pass      unix:/django/django_app/app2/app2.sock;
        uwsgi_param     UWSGI_CHDIR /django/django_app/app2;
        uwsgi_param     UWSGI_SCRIPT app2.wsgi:application;
    }

    location /static/ {
        alias /django/static/;
    }

    location /media/ {
        alias /django/media/;
    }

    error_page 404 /404.html;
    location = /404.html {
        root /django/;
    }
}